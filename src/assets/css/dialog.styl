.dialog-safe-w
  display: flex
  align-items center
  justify-content center
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom:0
  width: 100%
  height: 100%
  z-index: 200
  color #000
  background-color: rgba(0,0,0,.4)
  &.safeDialog-enter, &.safeDialog-leave-to
    opacity: 0;
    .dialog-safe
      transform: translate(0, -5%)
  &.safeDialog-enter-active
    transition: .3s;
    .dialog-safe
      transition: .3s
  &.safeDialog-leave-active
    transition: .1s;
    .dialog-safe
      transition: .1s
  .dialog-safe
    width: 600px
    background-color: #fff
    position: relative
    border-radius 4px
    color #17161f
    transform: translate(0, 0)
    padding: 0 40px 50px 40px
    .close{
      cursor pointer
      width 21px
      height 21px
      position absolute
      right 20px
      top 40px
      .close-icon{
        width 21px
        height 21px
        background url("../img/common/close.png")
      }
    }
    .dialog-title
      font-size: 20px
      font-weight: bold
      color #17161f
      padding: 50px 0 60px
      text-align: center
    .g-dialog-btn-wrap
      margin-top 50px
      display: flex
      align-items center
      justify-content center
    .form-item
      .label
        margin-bottom: 20px
        font-size: 16px
      .input
        width: 100%
        height: 70px
        border-radius 6px
        background-color: #f5f5f5
        padding: 0 30px
        font-size: 16px
        color #000
    .err-ms
      color: #ff717d;
      font-size 14px
      margin-top: 10px;
    .shortMsg
      position relative
      .payMsg-box
        .payMsg
          width 100%
          height .8rem
          background-color #f5f6fa
          border-radius .4rem
          font-size .28rem
          padding 0 .3rem
        .sendMsg
          position absolute
          top 0
          right 0
          height: 100%
          padding: 0 .2rem
          background-color transparent
          border none
          outline none
          font-size: .28rem
          color #00a6f1
    .g-dialog-btn
      text-align center
      flex 1
    .comfirm
      width: 100%
      height: 70px
      display: flex
      align-items center
      justify-content center
      cursor pointer
      color #fff
      font-size: 20px
      border-radius 6px
      background-color: #3376ff
      &.loading-btn
        pointer-events none
      img
        width: 30px
        display: block
        margin-right: 10px
